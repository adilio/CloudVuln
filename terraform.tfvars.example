# CloudVuln - Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize for your environment

# Owner tag for all resources (used for tracking and cleanup)
owner = "your-name"

# AWS region to deploy resources
aws_region = "us-east-1"

# SSH/RDP access CIDR (restrict to your IP for security)
# To get your IP: curl ifconfig.me
allow_ssh_cidr = "YOUR.IP.ADDRESS.HERE/32"  # e.g., "203.0.113.42/32"
allow_rdp_cidr = "YOUR.IP.ADDRESS.HERE/32"

# HTTP/HTTPS access CIDR (can be open for testing web scenarios)
allow_http_cidr = "0.0.0.0/0"

# SSH key pair name (must exist in your AWS account)
# Create one with: aws ec2 create-key-pair --key-name cloudvuln --query 'KeyMaterial' --output text > ~/.ssh/cloudvuln.pem
key_name = "your-keypair-name"

# Scenario-specific variables
scenario = "cloudvuln-lab"

# Instance type (t3.medium recommended, t3.micro for cost savings)
instance_type = "t3.medium"

